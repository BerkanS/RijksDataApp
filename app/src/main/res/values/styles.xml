<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialCardStyleHeader">
        <item name="shapeAppearanceOverlay">@style/TopLeftTopRightRoundedCorners</item>
        <item name="android:layout_marginTop">@dimen/marginDefault</item>
        <item name="cardBackgroundColor">@color/darkerBrown</item>
    </style>

    <style name="MaterialCardStyleItemFavorite">
        <item name="shapeAppearanceOverlay">@style/BottomLeftBottomRightRoundedCorners</item>
        <item name="cardBackgroundColor"></item>
    </style>

    <style name="TextStyleHeader">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/marginSmaller</item>
    </style>

    <style name="TopLeftTopRightRoundedCorners">
        <item name="cornerSizeTopLeft">14dp</item>
        <item name="cornerSizeTopRight">14dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomLeftBottomRightRoundedCorners">
        <item name="cornerSizeBottomLeft">14dp</item>
        <item name="cornerSizeBottomRight">14dp</item>
    </style>
</resources>